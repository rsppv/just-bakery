@model IEnumerable<JustBakery.Models.Stock>

@{
    ViewBag.Title = "Наши склады";
}

<h2>Наши склады</h2>

<p>
    @Html.ActionLink("Добавить склад", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockType)
        </th>
        <th>
            Название
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockType)
            </td>
            <td>
                @if (item.Bakery == null)
                {
                    @:<em><small>Не принадлежит пекарне</small></em>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Bakery.Name)
                }
            </td>

            <td class="center-block text-center col-md-2">
                <a href="@Url.Action("Edit", new { id = item.StockID })" class="btn btn-default btn-sm" role="button">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="@Url.Action("Details", new { id = item.StockID })" class="btn btn-default btn-sm" role="button">
                    <span class="glyphicon glyphicon-th-list"></span>
                </a>
                <a href="@Url.Action("Delete", new { id = item.StockID })" class="btn btn-default btn-sm" role="button">
                    <span class="glyphicon glyphicon-minus-sign"></span>
                </a>
            </td>
        </tr>
    }

</table>
