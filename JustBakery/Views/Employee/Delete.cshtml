@model JustBakery.Models.Employee

@{
    ViewBag.Title = "Удаление сотрудника";
}

<h2>Удаление сотрудника</h2>

<h3>Вы уверены что хотите удалить сотрудника?</h3>
<div>
    <h4>@Model.Person.ShortName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Person.FullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Person.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Position.ShortName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position.ShortName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Bakery.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bakery.Name) -
            @Html.DisplayFor(model => model.Bakery.FullAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Person.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Person.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Person.BirthDay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Person.BirthDay)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Person.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Person.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DismissalDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DismissalDate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад к списку", "Index")
        </div>
    }
</div>
