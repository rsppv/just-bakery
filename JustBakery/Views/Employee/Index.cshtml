@model IEnumerable<JustBakery.Models.Employee>

@{
    ViewBag.Title = "Сотрудники";
}

<h2>Сотрудники</h2>

<p>
    @Html.ActionLink("Добавить нового сотрудника", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Person.ShortName)
        </th>
        <th>
            Должность
        </th>
        <th>
            Место работы
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person.Phone)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Person.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bakery.Name) -
                @Html.DisplayFor(modelItem => item.Bakery.FullAddress)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Person.Phone)
            </td>
            
            <td class="center-block text-center col-md-2">
                <a href="@Url.Action("Edit", new { id = item.EmployeeID })" class="btn btn-default btn-sm" role="button">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="@Url.Action("Delete", new { id = item.EmployeeID })" class="btn btn-default btn-sm" role="button">
                    <span class="glyphicon glyphicon-minus-sign"></span>
                </a>

                <a href="@Url.Action("Details", new { id = item.EmployeeID })" class="btn btn-default btn-sm" role="button">
                    <span class="glyphicon glyphicon-th-list"></span>
                </a>
            </td>
        </tr>
    }

</table>
