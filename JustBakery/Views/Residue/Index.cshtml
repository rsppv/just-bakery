@model IEnumerable<JustBakery.Models.ProductResidue>

@{
    ViewBag.Title = "Остатки продукции на складах";
}

<h2>Остатки продукции на складах</h2>

<p>
    @Html.ActionLink("Добавить запись в журнал", "CreateResidue" , "Product")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr class="info">
        <th>
            Продукция
        </th>
        <th>
            Склад
        </th>
        <th>
            Количество
        </th>
        <th>
            Ед. изм.
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock.Address) -
                @Html.DisplayFor(modelItem => item.Stock.Bakery.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Units)
            </td>
            <td class="center-block text-center col-md-2">
                <a href="@Url.Action("EditResidue","Product", new { id = item.ProductResidueID })" class="btn btn-default btn-sm" role="button">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="@Url.Action("DeleteResidue", "Product", new { id = item.ProductResidueID })" class="btn btn-default btn-sm" role="button">
                    <span class="glyphicon glyphicon-minus-sign"></span>
                </a>
            </td>
        </tr>
    }

</table>
