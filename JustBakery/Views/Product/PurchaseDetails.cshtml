@model IEnumerable<JustBakery.Models.DetailProductOperation>

@{
    ViewBag.Title = "Детали заказа";
}

<h2>Детали заказа</h2>
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("customer"))
    {
        <p>
            <a href="@Url.Action("CancelPurchase", new { orderId = ViewBag.OrderId })">Отменить заказ</a>
        </p>
        <p>
            @Html.ActionLink("Назад к списку продукции", "Index")
        </p>
    }
}

<table class="table table-striped table-bordered table-hover">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Units)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Units)
            </td>
        </tr>
    }

</table>
