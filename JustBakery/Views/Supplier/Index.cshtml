@model IEnumerable<JustBakery.Models.Supplier>

@{
    ViewBag.Title = "Поставщики";
}

<h2>Поставщики</h2>

<p>
    @Html.ActionLink("Добавить нового поставщика", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.INN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfficePhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPersonID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.INN)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.ShortName)
            </td>
            <td class="center-block text-center col-md-2">

                <a href="@Url.Action("Edit", new { id = item.SupplierID})" class="btn btn-default btn-sm" role="button">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="@Url.Action("Delete", new { id = item.SupplierID })" class="btn btn-default btn-sm" role="button">
                    <span class="glyphicon glyphicon-minus-sign"></span>
                </a>

                <a href="@Url.Action("Details", new { id = item.SupplierID })" class="btn btn-default btn-sm" role="button">
                    <span class="glyphicon glyphicon-th-list"></span>
                </a>

            </td>
        </tr>
    }

</table>
